<%-include("./partials/header")%>


    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="/"><img class="logo-img"
                        src="<%=websiteDetails.website_logo %>" alt="logo"
                        style="height: 35px;width: 100%;object-fit: contain;"></a><span
                    class="splash-description">Create New Password.</span></div>
            <div class="card-body">
                <form id="change">
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="password" type="password"
                            placeholder="New Password" required="">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="password2" type="password" placeholder="Confirm New Password"
                            required>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Change Password</button>
                </form>
            </div>
            
        </div>
    </div>


<script src="/admin/js/auth/change.js"></script>

<%-include("./partials/footer")%>