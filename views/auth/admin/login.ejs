<%-include("./partials/header")%>



    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center"><a href="/"><img class="logo-img"
                        src="<%=websiteDetails.website_logo %>" alt="logo" style="height: 35px;width: 100%;object-fit: contain;"></a><span class="splash-description">Please enter
                    your admin information.</span></div>
            <div class="card-body">
                <form id="login">
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="credentials" type="text" placeholder="Username Or Email"
                            required="">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="password" type="password"
                            placeholder="Password" required>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/admin/forgot-password" class="footer-link">Forgot Password</a>
                </div>
            </div>
        </div>
    </div>

<script src="/admin/js/auth/login.js"></script>
<%-include("./partials/footer")%>