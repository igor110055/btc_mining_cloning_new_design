<%- include('../../partials/header'); %>


    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">

                        <p>Note: <strong>Spillover are in points, not in currency.</strong></p>

                        <div class="tab-regular">

                            <ul class="nav nav-tabs nav-fill" id="myTab7" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active show" id="home-tab-justify" data-toggle="tab" href="#home-justify" role="tab"
                                        aria-controls="home" aria-selected="false">Spill By Referral</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="profile-tab-justify" data-toggle="tab" href="#profile-justify" role="tab"
                                        aria-controls="profile" aria-selected="false">Spill By Package</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="contact-tab-justify" data-toggle="tab" href="#contact-justify"
                                        role="tab" aria-controls="contact" aria-selected="true">Spill Based On User</a>
                                </li>
                            </ul>

                            <div class="tab-content" id="myTabContent7">

                                <div class="tab-pane fade active show" id="home-justify" role="tabpanel" aria-labelledby="home-tab-justify">
                                    <form id="referral">
                                    
                                        <div class="modal-body">
                                    
                                            <div class="form-group">
                                                <label for="minref">Minimum Referral</label>
                                                <input type="number" class="form-control" id="minref" required>
                                    
                                    
                                            </div>
                                    
                                            <div class="form-group">
                                                <label for="amount">Amount To Spill</label>
                                                <input type="text" class="form-control" id="amount" required>
                                    
                                    
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" id="button" class="btn btn-primary">Spillover</button>
                                            </div>
                                    
                                    
                                        </div>
                                    </form>
                                </div>

                                <div class="tab-pane fade" id="profile-justify" role="tabpanel" aria-labelledby="profile-tab-justify">
                                    <form id="packages">
                                        <div class="form-group">
                                            
                                            <select required id="package"
                                            class="custom-select custom-select-sm form-control form-control-sm">
                                            <option value="">Select Package</option>
                                            <%packages.map(pk =>{%>
                                                <option value="<%=pk.plan_id%>"><%=pk.plan_name%></option>
                                            <%})%>
                    
                                        </select>

                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="amount">Amount To Spill</label>
                                            <input type="text" class="form-control" id="amount" required>
                                        
                                        
                                        </div>
                                        
                                        <div class="form-group">
                                            <button type="submit" id="button" class="btn btn-primary">Spillover</button>
                                        </div>
                                        
                                    </form>
                                </div>

                                <div class="tab-pane fade" id="contact-justify" role="tabpanel"
                                    aria-labelledby="contact-tab-justify">
                                    <form id="users">
                                        <div class="form-group">
                                            
                                            <select required id="user"
                                            class="custom-select custom-select-sm form-control form-control-sm">
                                            <option value="">Select User</option>
                                            <%users.map(us =>{%>
                                                <option value="<%=us.uid%>"><%=us.fullname%></option>
                                            <%})%>
                    
                                        </select>

                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="amount">Amount To Spill</label>
                                            <input type="text" class="form-control" id="amount" required>
                                        
                                        
                                        </div>
                                        
                                        <div class="form-group">
                                            <button type="submit" id="button" class="btn btn-primary">Spillover</button>
                                        </div>
                                        
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/admin/js/spillover/spillover.js"></script>
    <%- include('../../partials/footer'); %>

