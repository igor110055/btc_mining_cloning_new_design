<%- include('../../partials/header'); %>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">



                <div class="card">
                    <div class="card-body">


                        <form id="editPost">
                        
                            <div class="modal-body">
                        
                                <div class="form-group">
                                    <label for="title">Post Title</label>
                                    <input type="text" class="form-control" id="title"  required>
                        
                        
                                </div>
                        
                                <div class="form-group">
                                    <label for="slug">Post Slug</label>
                                    <div style="display: flex;">
                                        <input type="text" class="form-control" id="slug" aria-describedby="slug" required >
                                    </div>
                                </div>
                        
                        
                                <div class="form-group">
                                    <label for="desc">Post Description</label>
                                    <textarea class="form-control" id="summernote" rows="3"></textarea>
                        
                        
                                </div>

                                <div class="form-group">
                                    <label for="earnable">Post Earnable</label><br>
                                    
                                    <div class="switch-button switch-button-yesno">
                                        <input checked="" type="checkbox" name="earnable" id="earnable"><span>
                                            <label for="earnable"></label></span>
                                    </div>
                                    
                                </div>
                                
                                <div style="display: none;" class="form-group">
                                    <img id="featured" src="" alt="image" class="img-fluid rounded-circle img-thumbnail avatar-preview"
                                        style="width: 300px;height: 300px;object-fit: contain;border-radius: 0 !important;">
                                </div>
                                
                                
                        
                                <div class="form-group">
                                    <label for="desc">Post Thumbnail</label>
                                    <input type="file" class="form-control" id="featured" aria-describedby="thumbnail">
                        
                                </div>
                        
                        
                        
                        
                        
                        
                        
                        
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" id="button" class="btn btn-primary">Save Changes</button>
                            </div>
                        </form>

                    </div> <!-- end card-body-->
                </div> <!-- end card-->




            </div><!-- end col-->
        </div>
    </div>

    <script src="/admin/js/posts/newPost.js"></script>
    <%- include('../../partials/footer'); %>