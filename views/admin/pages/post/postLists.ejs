<%- include('../../partials/header'); %>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>



    <div class="container-fluid dashboard-content">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <h4 class="page-title">
                        <%= title %>
                    </h4>
                </div>
            </div>
        </div>
        <!-- end page title -->


        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header"><div class="actions float-right">
                    
                        <a href="/admin/posts/new" id="new-page"
                            class="btn btn-xs btn-info ml-1 pay">New Post <i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                    
                    </div></h5>
                    <div class="card-body p-0">
                        <%if(posts.length> 0){ %>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0">#</th>
                                            <th class="border-0">Name</th>
                                            <th class="border-0">Slug</th>
                                            <th class="border-0">Status</th>
                                            <th class="border-0">Date</th>
                                            
                                            
                                            <th class="border-0">Action</th>
        
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%posts.map((pt,index)=>{ %>
                                            <tr>
                                                <td>
                                                    <%=index + 1 %>
                                                </td>
        
                                                <td>
                                                    <%=pt.post_title %>
                                                </td>
                                                <td>
                                                    <%=pt.post_slug %>
                                                </td>
                                                
                                                
        
                                                <td>
                                                    <%if(pt.post_status){%>
                                                    <button type="button" class="btn btn-success width-sm waves-effect waves-light">Published</button>
                                                    <%}else{%>
                                                    
                                                    <button type="button" class="btn btn-danger width-sm waves-effect waves-light">Draft</button>
                                                    
                                                    <%} %>
                                                </td>

                                                <td>
                                                    <%=pt.post_created_at %>
                                                </td>
        
                                                <td>
                                                    <a 
                                                    href="/admin/posts/<%=pt.post_id %>" class="btn btn-xs btn-info ml-1 edit" ><i
                                                            class="fa fa-pencil" aria-hidden="true"></i></a>
        
                                                    <a onclick="deletePost('<%=pt.post_id %>',this)" href="javascript: void(0);" class="btn btn-xs btn-danger ml-1 delete-package"><i
                                                            class="fa fa-trash" aria-hidden="true"></i></a>
                                                </td>
        
        
                                            </tr>

                                            
                                            <% }) %>
        
                                                <tr>
                                                    <td colspan="9"></td>
                                                </tr>
                                    </tbody>
        
                                </table>
                                <%-include("../../partials/pagination")%>
        
                                
        
                            </div>
                            <% }else{%>
                                <h3 class="text-center pt-3">No Post At The Moment</h3>
                                <%}%>
                    </div>
                </div>
            </div>
        </div>



        
    </div>
<%-include("./modal/newPost")%>
<script src="/admin/js/posts/posts.js"></script>
<%-include('../../partials/footer'); %>