            <ul class="d-flex align-items-center">
                
                <li class="nav-item dropdown pe-3"> <a class="nav-link nav-profile d-flex align-items-center pe-0"
                        href="#" data-bs-toggle="dropdown"> <img style="width: 35px;
                        height: 35px;" src="<%=user.avatar ? user.avatar : '/img/avatar/avatar.jpg'%>" alt="Profile"
                            class="rounded-circle"> <span class="d-none d-md-block dropdown-toggle ps-2 text-capitalize"><%=user.fullname%> <br><%=websiteDetails.website_currency + balance.total.toLocaleString()%></span> </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6 class="text-capitalize"><%=user.fullname%> <br> <%=websiteDetails.website_currency + balance.total.toLocaleString()%> </h6> <span>Subscriber</span>
