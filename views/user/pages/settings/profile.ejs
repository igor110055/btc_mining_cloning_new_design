<%-include("../../partials/header")%>


    <div class="row">

        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-3 header-title">Basic Settings</h4>
        
                    <form id="basic">
        
                        <div class="form-group mt-4">
                            <label for="fullname">Full Name</label>
                            <input type="text" value="<%=user.fullname%>" class="form-control" id="fullname">
                        </div>
        
                        <div class="form-group mt-4">
                            <label for="email">Email</label>
                            <input type="email" value="<%=user.email%>" class="form-control" id="email">
                        </div>
        
                        <div class="form-group mt-4">
                            <label for="phone">Phone Number</label>
                            <input type="text" value="<%=user.phone_number%>" class="form-control" id="phone">
                        </div>
                        
                        <div class="form-group mt-4">
                            <label for="country">Country </label>
                            <select id="country" required class="form-select">
                                <option>Select Country</option>
                                <%countries.map(ct=>{%>
                                    <option <%=user.country === ct.name ? 'selected=""' : ''%> value="<%=ct.name%>">
                                        <%=ct.name%>
                                    </option>
                                    <%})%>
                            </select>
                        </div>
        
        
                        <button id="submit" type="submit" class="btn btn-primary waves-effect waves-light mt-4">Save Changes</button>
                    </form>
        
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div>
        
        
        <div class="col-lg-6 mt-4 mt-lg-0">
            <div class="card">
                <div class="card-body">
                    <h4 class="mb-3 header-title">Profile Picture</h4>
        
                    <form id="avatar">
                        <div class="form-group">
                            <img id="avatar" src="<%=user.avatar ? user.avatar:'/img/avatar/avatar.jpg' %>" alt="image" class="img-fluid rounded-circle img-thumbnail avatar-preview"
                                style="width: 120px;height: 120px;object-fit: contain;">
                        </div>
        
        
                        <div class="form-group mt-4">
                            <label for="avatar">New Profile Picture</label>
                            <input required type="file" accept="image/*" class="form-control" id="avatar" name="avatar" placeholder="New Profile Picture">
        
                        </div>
        
        
                        <button id="submit" type="submit" class="btn btn-primary waves-effect waves-light mt-4">Change Profile
                            Picture</button>
                    </form>
        
                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div>



<script src="/user/js/user/settings/profile.js"></script>


<%-include("../../partials/footer")%>
