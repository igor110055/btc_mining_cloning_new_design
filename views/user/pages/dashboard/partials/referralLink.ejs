<div class="col-lg-5 mb-4">
    <div class="card p-3">
        <form id="referral-link">
            <div class="form-group">
                <label for="ref_link" class="form-control-label mb-4">My Referral Link</label>
                <p>My Upline Name: <strong><%=user.username%></strong></p>
                <input class="form-control" type="text" value="<%=homeUrl%>/register?ref=<%=user.username%>"
                    id="ref_link">
            </div>
            <div class="form-group d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">
                    <span class="btn-inner--icon"><i class="mdi mdi-content-copy"></i></span>
                    <span class="btn-inner--text"> Copy Referral Link</span>
                </button>
            </div>
        </form>

    </div>
</div>