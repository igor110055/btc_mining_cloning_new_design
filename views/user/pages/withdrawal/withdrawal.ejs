<%-include("../../partials/header")%>


<div class="container-fluid mt--6">




    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
            
            
            
            <div class="row">
                
                <div class="<%=websiteDetails.website_act_withdrawal_status || websiteDetails.website_ref_withdrawal_status ? 'col-lg-8' : 'col-12'%>">
                    <div class="card">
                        <div class="card-body">
                            
                            <%if(websiteDetails.website_act_withdrawal_status || websiteDetails.website_ref_withdrawal_status){%>
                            <form id="withdraw" class="pt-3">
                                <div class="form-group">
                                    <label for="amount">Total Amount</label>
                                    <input required="" value="<%=(user.activities_balance + user.mining_balance) * websiteDetails.website_per_coin + user.referral_balance%>" type="text" class="form-control" id="amount" placeholder="Amount">
                                </div>
                    
                                <div class="form-group mb-3 mt-4">
                                    <label for="type">Withdrawal Type</label>
                                    <select required id="type" class="form-control">
                                        
                                        
                                        <option selected value="">Select Withdrawal Type</option>
                                        <%if(websiteDetails.website_act_withdrawal_status){%>
                                            <option value="all">Mining Balance + Activities Balance</option>
                                            <%}%>

                                            <%if(websiteDetails.website_ref_withdrawal_status){%>
                                            <option value="ref">Referral Balance</option>
                                            <%}%>
                                        
                                        
                                        
                                        
                                    </select>
                                    
                                </div>

                                

                                <button id="submit" type="submit" class="btn btn-primary waves-effect waves-light mt-4">Withdraw</button>
                            </form>
                            <%}else{%>
                            <h3 class="text-center">WITHDRAWAL PORTAL CLOSED.</h3>
                            <%}%>
                    
                        </div> <!-- end card-body-->
                    </div>
                </div>
              


                <%if(websiteDetails.website_act_withdrawal_status || websiteDetails.website_ref_withdrawal_status){%>
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="text-center pt-3">Your Balance Info</h5>
                            <div class="nav nav-pills flex-column nav-pills-tab text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            
                            
                                <a class="nav-link text-dark mt-2 shadow py-2" id="custom-v-pills-payment-tab" data-toggle="pill" href="#custom-v-pills-payment" role="tab" aria-controls="custom-v-pills-payment" aria-selected="false">
                                    <i class="fa fa-money d-block font-24"></i>
                                    <h6><%=user.mining_balance%> <span style="font-size: 12px;"><%=websiteDetails.website_reward_name%></span> <br>
                                    <%=websiteDetails.website_currency + (user.mining_balance * websiteDetails.website_per_coin)%>
                                    </h6> 
                                    Mining Balance
                                </a>
                            
                                <a class="nav-link text-dark pt-4 mt-2 shadow py-2" id="custom-v-pills-payment-tab" data-toggle="pill" href="#custom-v-pills-payment" role="tab" aria-controls="custom-v-pills-payment" aria-selected="false">
                                    <i class="fa fa-money d-block font-24"></i>
                                    <h6><%=user.activities_balance%> <span style="font-size: 12px;"><%=websiteDetails.website_reward_name%></span><br>
                                    <%=websiteDetails.website_currency + (user.activities_balance * websiteDetails.website_per_coin)%>
                                    </h6>
                                    Activities Balance
                                </a>
                                
                                <a class="nav-link text-dark pt-4 mt-2 shadow py-2" id="custom-v-pills-payment-tab" data-toggle="pill" href="#custom-v-pills-payment" role="tab" aria-controls="custom-v-pills-payment" aria-selected="false">
                                    <i class="fa fa-money d-block font-24"></i>
                                    <h6><%=websiteDetails.website_currency%><%=user.referral_balance%> </h6>
                                    Referral Balance
                                </a>
                                
                                
                            
                            
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
            </div>

        </div>
    </div>
 




<script src="/user/js/user/withdrawal/withdrawal.js"></script>

<%-include("../../partials/footer")%>
