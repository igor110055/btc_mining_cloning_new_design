<%-include("../../partials/header")%>


<div class="row">
    
    <div class="col-12">
        <div class="row">
            <div class="col-md-4 col-12">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium pt-3">Balance</p>
                                <h4 class="mb-0"><%=user.mining_balance.toLocaleString()%> <%=websiteDetails.website_reward_name%> <sub style="font-size:13px">( <%=websiteDetails.website_currency + (user.mining_balance * websiteDetails.website_per_coin).toLocaleString()%> )</sub></h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <i class="bx bx-money" style="font-size:30px !important"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
            <div class="col-md-4 col-12">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium pt-3">Successful Mine</p>
                                <h4 class="mb-0"><%=mineCount%></h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <i class="bx bx-money" style="font-size:30px !important"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
            <div class="col-md-4 col-12">
                <div class="card mini-stats-wid">
                    <div class="card-body">
                        <div class="d-flex">
                            <div class="flex-grow-1">
                                <p class="text-muted fw-medium pt-3">Active Mine</p>
                                <h4 class="mb-0"><%=activeMine%></h4>
                            </div>

                            <div class="flex-shrink-0 align-self-center">
                                <i class="bx bx-money" style="font-size:30px !important"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>

        <div class="row">
            <div id="mineDark" class="col-md-5">
                <div id="mineDark" class="card">
                    <div id="mineDark" class="card-header">
                        <h4>Mining Controller</h4>
                    </div>
                    <div class="card-body" style="position: relative;">
                        <div class="row">
                            <div class="mine-balance d-flex justify-content-center mb-5 pt-3">
                                <button type="button" class="btn btn-dark waves-effect waves-light">
                                    <span class="points">0.00</span>
                                    <span class="rewardn"><%=websiteDetails.website_mining_reward_name%></span>
                                </button>
                            </div>
        
                            <div class="mine-wrapper d-flex justify-content-center">
                                <button class="mine-engine">
                                    <i style="font-size: 80%;" class="bi bi-hammer"></i>
                                </button>
                            </div>
                                
                            <p id="intro" class="text-muted mb-3 text-center">Machine Is Idle, Start It.</p>
        
                            <div class="timer d-flex justify-content-center mt-2">
                                <button type="button" class="btn btn-dark waves-effect waves-light">
                                    <span class="hour">00</span>:
                                    <span class="minute">00</span>:
                                    <span class="seconds">00</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4>Mining History</h4>
                            </div>
                            <div class="card-body" style="position: relative;">
    
                                <%if(history.length){%>
                                    <div class="table-responsive">
                                        <table id="mytable" class="table">
                                            <thead>
                                                <tr>
                                    
                                                    <th> # </th>
                                                    <th> Start </th>
                                                    <th> End </th>
                                                    <th> Amount </th>
                                                    <th> Balance </th>
                                                    <th> Status </th>
                                    
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%history.map((eh,index)=>{%>
                                    
                                                    <tr>
                                                        <td>
                                                            <%=index + 1%>
                                                        </td>
                                    
                                                        <td>
                                                            <%=eh.m_start_time%>
                                                        </td>
                                                        
                                                        <td>
                                                            <%=eh.m_end_time%>
                                                        </td>
                                    
                                                        <td> <span class="text-xs font-weight-bold">
                                                                <%=websiteDetails.website_currency%><%=(eh.m_amount * websiteDetails.website_per_coin).toLocaleString()%> </span>
                                                                </td>
                                                        <td> <span class="text-xs font-weight-bold">
                                                                <%=websiteDetails.website_currency%><%=(eh.m_balance * websiteDetails.website_per_coin).toLocaleString()%> </span>
                                                                </td>
                                    
                                                        <td>
                                                            <%if(eh.m_status){%>
                                                            <button type="button" class="btn btn-success btn-sm waves-light nothingbtn">Extracted
                                                            </button>
                                                            <%}else{%>
                                                            <button type="button" class="btn btn-warning btn-sm waves-light nothingbtn">
                                                                Extracting...
                                                            </button>
                                                            <%}%>
                                                        </td>
                                    
                                                    </tr>
                                    
                                                    <%})%>
                                    
                                    
                                            </tbody>
                                        </table>
                                        <div class="d-flex justify-content-center">
                                            <%-include("../../partials/pagination")%>
                                    
                                        </div>
                                    </div>
                                    <%}else{%>
                                        <h6 class="text-center pt-3">No Data</h6>
                                        <%}%>
    
                            </div>
                        </div>
                    </div>
                    
                   
                </div>
            </div>

        </div>
        

        </div>

</div>


<script src="/user/js/user/mining/mining.js"></script>


<%-include("../../partials/footer")%>
